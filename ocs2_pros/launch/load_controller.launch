<?xml version="1.0" ?>


<launch>
    <!-- <arg name="robot_type" default="$(env ROBOT_TYPE)" doc="Robot type: [a1, aliengo, go1, laikago]"/> -->
    <param name="gaitCommandFile" value="$(find ocs2_pros)/config/gait.info"/>
    
    <rosparam file="$(find ocs2_pros)/config/controllers.yaml" command="load"/>
    
    <!-- 加载joint_state_controller 和 legged_controller -->
    <node name="controller_loader" pkg="controller_manager" type="controller_manager"
          output="screen" args="load
          controllers/joint_state_controller
          controllers/legged_controller"/>
    
    <!-- 将gaitCommandFile加载到KeyboardPublisher中并循环监听模式切换  -->
    <node pkg="ocs2_legged_robot_ros" type="legged_robot_gait_command" name="legged_robot_gait_command" output="screen"/>


</launch>
